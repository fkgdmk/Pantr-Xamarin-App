<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pantr.ViewPost">
    <ContentPage.Content Padding="20, 20, 20, 20">
        <StackLayout>
            <Image HorizontalOptions="End" x:Name="editBtn" WidthRequest="20" HeightRequest="20" Source="pencil.png" Margin="0, 5, 5, 0">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer
                        Tapped="edit"
                        NumberOfTapsRequired="1" />
                </Image.GestureRecognizers>
            </Image>
            <Image WidthRequest="80" Source="icon.png" HorizontalOptions="Center"/>
            <Label VerticalOptions="Center" HorizontalOptions="Center" Text="{Binding Quantity}"/>
            <Label VerticalOptions="Center" HorizontalOptions="Center" Text="{Binding Address}"/>
            <Label VerticalOptions="Center" HorizontalOptions="Center" Text="{Binding Date}"/>
            <Label VerticalOptions="Center" HorizontalOptions="Center" Text="{Binding Time}"/>
            <Button Text="Annuller" x:Name="submit" Clicked="submit_Clicked" HorizontalOptions="Center" Margin="0, 40, 0, 0" WidthRequest="120"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>